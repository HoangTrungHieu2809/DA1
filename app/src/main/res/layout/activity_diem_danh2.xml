<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Thanh tiêu đề -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#00B8A9"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khôi Phục"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- Nội dung chính -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageKhôiPhục"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/riset"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnKhoiPhuc"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Khôi Phục"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:layout_marginBottom="20dp" />
    </LinearLayout>

    <!-- Thanh điều hướng dưới -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#5DB5A4"
        android:orientation="horizontal"
        android:layout_marginBottom="45dp"
        android:weightSum="4">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:contentDescription="Home"

            android:padding="10dp" />

        <ImageView
            android:id="@+id/navSchedule"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/lich"
            android:contentDescription="Schedule"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/navNotifications"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/logo2"
            android:contentDescription="Notifications"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/nguoi"
            android:contentDescription="Profile"
            android:padding="10dp" />
    </LinearLayout>
</LinearLayout>
