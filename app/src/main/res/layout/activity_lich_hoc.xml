<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Tiêu đề -->

    <!-- Danh sách lịch học -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5DB5A4"
        android:gravity="center"
        android:padding="16dp"
        android:text="Lịch Học"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/layoutScheduleList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Mẫu một thẻ lịch học -->
            <LinearLayout
                android:id="@+id/cardExample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#BCE1DA"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lập Trình Java"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23/11/2024"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phòng: P402"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCaHoc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ca Học: Ca Sáng(7h - 11h30)"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/cardExample2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#BCE1DA"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvSubject2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lập Trình tin học"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13/10/2024"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvRoom2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phòng: H406"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCaHoc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ca Học: Ca Sáng(7h - 11h30)"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardExample3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#BCE1DA"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvSubject3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lập Trình API"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDate3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13/12/2024"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvRoom3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phòng: H206"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCaHoc3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ca Học: Ca Sáng(7h - 11h30)"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardExample4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#BCE1DA"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvSubject4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Võ Vovinam"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDate4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14/12/2024"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvRoom4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phòng: H301"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCaHoc4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ca Học: Ca Sáng(7h - 11h30)"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardExample5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#BCE1DA"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvSubject5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chính Trị"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDate5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14/12/2024"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvRoom5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phòng: K206"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCaHoc5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ca Học: Ca Chiều(13h30 - 17h30)"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardExample6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#BCE1DA"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvSubject6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pháp Luật"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDate6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14/12/2024"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvRoom6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phòng: H302"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCaHoc6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ca Học: Ca Sáng(7h30 - 11h)"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>
            <!-- Thêm các thẻ khác vào đây -->

        </LinearLayout>
    </ScrollView>

    <!-- Thanh điều hướng dưới -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="45dp"
        android:background="#5DB5A4"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:contentDescription="Home"
            android:padding="10dp"
            />

        <ImageView
            android:id="@+id/navSchedule"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/lich"
            android:contentDescription="Schedule"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/navNotifications"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/logo2"
            android:contentDescription="Notifications"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/nguoi"
            android:contentDescription="Profile"
            android:padding="10dp" />
    </LinearLayout>
</LinearLayout>
