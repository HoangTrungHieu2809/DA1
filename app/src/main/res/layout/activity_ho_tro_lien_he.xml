<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5DB5A4"
        android:padding="16dp"
        android:text="Hỗ Trợ Liên Hệ"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold" />

    <!-- Nội dung cuộn -->

    <!-- Thanh điều hướng dưới -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Thẻ thông tin liên hệ -->
            <LinearLayout
                android:id="@+id/cardPhongHanhChinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#D6D6D6"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvPhongHanhChinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phòng Hành Chính"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDiaChiHanhChinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tòa: ABC Phòng A01"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvSDTHanhChinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SDT: 0123456789"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Các thẻ khác -->
            <LinearLayout
                android:id="@+id/cardPhongDaoTao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#D6D6D6"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvPhongDaoTao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phòng Đào Tạo"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDiaChiDaoTao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tòa: BAC Phòng B02"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvSDTDaoTao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SDT: 0987654321"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Tiếp tục thêm các phòng khác -->
            <LinearLayout
                android:id="@+id/cardPhongKhaoThi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#D6D6D6"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvPhongKhaoThi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phòng Khảo Thí"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDiaChiKhaoThi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tòa: CAB Phòng C03"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvSDTKhaoThi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SDT: 0456789123"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#5DB5A4"
        android:orientation="horizontal"
        android:layout_marginBottom="45dp"
        android:weightSum="4">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:contentDescription="Home"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/navSchedule"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/lich"
            android:contentDescription="Schedule"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/navNotifications"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/logo2"
            android:contentDescription="Notifications"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/nguoi"
            android:contentDescription="Profile"
            android:padding="10dp" />
    </LinearLayout>
</LinearLayout>
